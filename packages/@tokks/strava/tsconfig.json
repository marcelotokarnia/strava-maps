{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2017",
    "module": "commonjs",
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*": ["node_modules/*", "types/*"]
    }
  },
  "include": ["./types/**/*.ts", "./src/**/*.ts"],
  "exclude": ["./node_modules"]
}
