{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "sourceMap": false,
    "jsx": "preserve",
    "baseUrl": ".",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "outDir": "dist",
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["src/*"],
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*.json", "src/**/*.ts"],
  "exclude": ["node_modules/*"]
}
